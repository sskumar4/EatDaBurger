<h1>Burgers</h1>
<div class="row m-3 p-3">
  <div class="col-md-6">
<h2>Burgers</h2>

<ul class="pl-2">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
  <div class="col-md-6">
<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
<div class="row mx-3  px-3 ">
  <div class="col-md">
<h2 class="text-center">Add a Burger</h2>
</div>
</div>
<div class="col-md mx-3 mb-3 px-3 pb-3">
  <form class="create-form  justify-content-center mb-4">
    <div class="form-group justify-content-center">
      <label for="burg"><b>Burger:</b></label>
      <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
