<h1>Burgers</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

  <form class="create-form  justify-content-center mb-4">
    <div class="form-group justify-content-center">
      <label for="burg"><b>Burger:</b></label>
      <input type="text" id="burg" name="name">


  <button type="submit">Add Burger</button>
</form>
